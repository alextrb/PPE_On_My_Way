<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.training.jeremy_pc.mapway.CreationWayActivityCheckpoint"
    android:orientation="vertical"
    android:background="@drawable/backItineraire">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:textAlignment="center"
            android:background="@drawable/picto"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:layout_width="0.1dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp" />

        <TextView
            android:text="Name :"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <EditText
            android:layout_weight="3"
            android:id="@+id/EditTextNameCheckpoint"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <include
        layout="@layout/activity_maps"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Describe the checkpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>

        <EditText
            android:id="@+id/EditTextdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/buttonValidDescWay"
                android:onClick="validation"
                android:text="Valider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
